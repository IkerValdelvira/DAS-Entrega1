<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#7CE6E8E8"
    >


    <ImageView
        android:id="@+id/imageViewPortadaVMT"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewFechaVMT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewTituloFav3"
        app:layout_constraintStart_toStartOf="@+id/textViewTituloFav3"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloFav3" />

    <TextView
        android:id="@+id/textViewTituloVMT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPortadaVMT"
        app:layout_constraintStart_toStartOf="@+id/imageViewPortadaVMT"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPortadaVMT"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewTituloFav3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:text="@string/FechaProgramada"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTituloVMT"
        app:layout_constraintEnd_toStartOf="@+id/buttonVMT"
        app:layout_constraintStart_toEndOf="@+id/imageViewPortadaVMT"
        app:layout_constraintTop_toTopOf="@+id/imageViewPortadaVMT" />

    <Button
        android:id="@+id/buttonVMT"
        style="@style/CustomStyleParaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:onClick="onClickQuitar"
        android:text="@string/Quitar"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTituloVMT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPortadaVMT" />
</androidx.constraintlayout.widget.ConstraintLayout>