<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="preferencias"
        android:title="@string/PreferenciasUsuario">
        <EditTextPreference
            android:key="nombre"
            android:title="@string/Nombre"
            android:summary="@string/IntroduceNombre"
            android:dialogTitle="@string/IntroduceNombre"
            android:dialogIcon="@mipmap/ic_launcher" />
        <ListPreference
            android:dialogTitle="@string/SeleccionaIdioma"
            android:entries="@array/idiomas"
            android:entryValues="@array/codigosidiomas"
            android:key="idioma"
            android:summary="@string/QueIdioma"
            android:title="@string/Idiomas" />
        <ListPreference
            android:dialogTitle="@string/EligeGeneroPref"
            android:entries="@array/generos"
            android:entryValues="@array/codigosgeneros"
            android:key="generopref"
            android:summary="@string/CualGeneroPref"
            android:title="@string/EligeGenero" />
    </PreferenceCategory>


</PreferenceScreen>